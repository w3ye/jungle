<section class="admin-categories-index">

  <header class="page-header">
    <h1>Admin &raquo; Categories</h1>
  </header>

  <div class="well">
    <%= link_to '+ New Category', [:new, :admin, :category], class: 'btn btn-info' %>
  </div>

  <div class="panel panel-default categories">
    <table class="table-bordered table" style="text-align: center;">
      <thead>
        <tr>
          <td style ="width: 20%;">Category ID</td>
          <td>Category Name</td>
        </tr>
      </thead>
      <tbody>
        <%= render @categories %>
      </tbody>
    </table>
  </div>
</section>